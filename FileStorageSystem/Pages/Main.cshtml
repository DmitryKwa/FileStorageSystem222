@page
@model FileStorageSystem.Pages.main_pageModel
@{
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Все файлы</title>
    <link rel="stylesheet" href="/css/main-style.css">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/menu-style.css">
</head>
<body>
    <header class="header">
        <div class="logo-search-group">
            <div class="logo">F<span>SS</span></div>
            <input type="text" placeholder="Поиск" class="search-input">
        </div>
        <div class="user-profile">
            <img src="/img/UserIcon.svg" alt="Аватар пользователя" class="avatar">
            <div class="user-info-row">
                <p class="user-info">Иванов Пётр Анатольевич</p>
                <p class="user-info">Администратор</p>
            </div>
        </div>
    </header>


    <script src="~/js/search.js"></script>

    <script>
        let login = localStorage.getItem('login');
        let span = document.getElementById('loginSpan');
        span.textContent = login;
    </script>

    <div class="wrapper">
        <aside class="sidebar">
            <ul class="icon-list">
                <li><a href="Main" class="active"><img src="/img/Files.svg" alt=""></a></li>
                <li><a href="Folders"><img src="/img/Folders.svg" alt=""></a></li>
                <li><a href="Login"><img src="/img/ArrowSquareLeft.svg" alt=""></a></li>
            </ul>
        </aside>

        <main class="content">
            <h1 class="title">Все файлы</h1>

            <div class="filters-box">
                <div class="filters">
                    <img src="/img/filter.svg" alt="" class="filter-icon">
                    <select name="sender" id="sender" class="filter-select">
                        <option value="" disabled selected>Отправитель</option>
                        <option>979 Immanuel Ferry</option>
                        <option>8587 Frida Ports</option>
                    </select>
                    <select name="date" id="date" class="filter-select">
                        <option value="" disabled selected>Дата</option>
                        <option>Недавно добавленные</option>
                        <option>Давно добавленные</option>
                        <option>Выбрать дату</option>
                    </select>
                    <select name="format" id="format" class="filter-select">
                        <option value="" disabled selected>Формат</option>
                        <option>DOCX</option>
                        <option>TXT</option>
                        <option>XLS</option>
                        <option>PNG</option>
                        <option>JPEG</option>
                    </select>
                    <select name="type" id="type" class="filter-select">
                        <option value="" disabled selected>Тип</option>
                        <option>Документ</option>
                        <option>Чек</option>
                        <option>Отчёт</option>
                        <option>Паспорт</option>
                        <option>Протокол</option>
                    </select>
                    <button type="button" class="reset-btn">
                        <img src="/img/Path.svg" alt="Сбросить">
                    </button>
                </div>
                <button type="button" class="download-btn">
                    <img src="/img/Folder_Download.svg" alt="Скачать">
                    Скачать
                </button>
            </div>

            <div class="no-files-message" style="display: none;">
                <h1 class="title">Файлов пока нет</h1>
                <label>Администратор ещё не добавил файлы</label>
            </div>

            <table class="files-table">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="select-all"></th>
                        <th>Название</th>
                        <th>Отправитель</th>
                        <th>Дата</th>
                        <th>Формат</th>
                        <th>Тип документа</th>
                    </tr>
                </thead>
                <tbody id="files-tbody">
                    <!-- Строки с данными будут добавляться/удаляться -->
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>Rosie Pearson</td>
                        <td>979 Immanuel Ferry</td>
                        <td>27.11.2025</td>
                        <td>DOCS</td>
                        <td>Договор</td>
                    </tr>
                    <tr>
                        <td><input type="checkbox"></td>
                        <td>Darrell Caldwell</td>
                        <td>8587 Frida Ports</td>
                        <td>27.11.2025</td>
                        <td>XLS</td>
                        <td>Отчёт</td>
                    </tr>
                </tbody>
            </table>

            <!-- Кнопка должна быть видна админу -->
            <button id="OpenModalBtn" class="open-modal-btn ">
                <img src="/img/PlusWhite.svg" alt="">Добавить файл
            </button>


            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="~/js/modalWindow.js"></script>


            <!-- Пагинация -->
            <div class="pagination-row">
                <span id="pageInfo">Страница 1/1. Результатов поиска: 2</span>
                <div class="pagination">
                    <button class="prev-btn" aria-label="Предыдущая страница">←</button>
                    <div class="page-numbers">1</div>
                    <button class="next-btn" aria-label="Следующая страница">→</button>
                </div>
            </div>
        </main>
    </div>
    <div id="modal" class="modal">
        <div class="modal-content">
            <h2 class="title">Добавление файла</h2>

            <div class="form-grid">
                <div class="grid-column">
                    <div class="input-group">
                        <label class="label">Название</label>
                        <input type="text" placeholder="Введите название файла" class="input">
                    </div>
                    <div class="input-group">
                        <label class="label">Отправитель</label>
                        <select id="DocOwner" class="input combo-box">
                            <option value="" disabled selected>Выберите отправителя</option>
                            <option>979 Immanuel Ferry</option>
                            <option>8587 Frida Ports</option>
                        </select>
                    </div>

                    <button class="btn add-file"><img src="/img/UploadSimple.svg" alt=""> Добавить файл</button>
                </div>

                <div class="grid-column">
                    <div class="input-group">
                        <label class="label">Тип документа</label>
                        <select id="DocType" class="input combo-box">
                            <option value="" disabled selected>Выберите тип документа</option>
                            <option>Чек</option>
                            <option>Документ</option>
                            <option>Отчёт</option>
                            <option>Паспорт</option>
                            <option>Квитанция</option>
                        </select>
                    </div>
                    <div class="input-group">
                        <label class="label">Формат файла</label>
                        <input type="text" placeholder="Выбирается автоматически" disabled class="input">
                    </div>
                    <button class="btn save">Сохранить</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/loadFile.js"></script>

    <script src="~/js/uploadFile.js"></script>

    <!-- Штука для списков при создании доков -->
    <script src="~/js/docsAttributesSelect.js"></script>
</body>
</html>