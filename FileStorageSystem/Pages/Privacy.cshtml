@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!-- Форма для вызова метода -->
<form id="myForm" method="post" asp-page-handler="MyMethod">
    <!-- Скрытый input для безопасности (ASP.NET требует его для POST) -->
    @Html.AntiForgeryToken()
</form>

<!-- Кликабельный <p>, который отправляет форму -->
<p onclick="document.getElementById('myForm').submit();" style="cursor: pointer; color: blue; text-decoration: underline;">
    Нажмите здесь, чтобы перейти к Swagger!</p>

<p>Use this page to detail your site's privacy policy.</p>
